{
    "name": "tKart",
    "version": "1.0.0",
    "description": "A complete api for tshirt shopping app",
    "main": "./build/index.js",
    "scripts": {
        "build": "rimraf ./dist && tsc",
        "start": "cross-env NODE_ENV=production npm run build && node dist/index.js",
        "start:dev": "nodemon src/index.ts",
        "dev-server": "cross-env NODE_ENV=development docker-compose -f docker-compose.dev.yml up --build -d && nodemon",
        "postinstall": "chmod +x ./scripts/dev.sh",
        "ts-node-server": "ts-node src/index.ts",
        "lint": "eslint . --ext .ts",
        "lint-and-fix": "eslint . --ext .ts --fix",
        "prepare": "husky install",
        "test": "cross-env NODE_ENV=test mocha --exit --require ts-node/register test/**/*.spec.ts test/**.spec.ts",
        "coverage": "nyc npm run test",
        "generate-keyPair": "ts-node ./scripts/genKeyPair.ts"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/atk81/typescript-express-docker-template.git"
    },
    "keywords": [
        "express",
        "docker",
        "typescript",
        "nodejs",
        "api",
        "shopping app",
        "begginer"
    ],
    "author": "atk81",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/atk81/typescript-express-docker-template/issues"
    },
    "homepage": "https://github.com/atk81/typescript-express-docker-template#readme",
    "devDependencies": {
        "@istanbuljs/nyc-config-typescript": "^1.0.2",
        "@types/bcryptjs": "^2.4.2",
        "@types/chai": "^4.3.0",
        "@types/cookie-parser": "^1.4.2",
        "@types/express": "^4.17.13",
        "@types/express-fileupload": "^1.2.2",
        "@types/ioredis": "^4.28.8",
        "@types/mocha": "^9.1.0",
        "@types/morgan": "^1.9.3",
        "@types/node": "17.0.21",
        "@types/proxyquire": "^1.3.28",
        "@types/sinon": "^10.0.11",
        "@types/swagger-ui-express": "^4.1.3",
        "@types/validator": "^13.7.1",
        "@types/yamljs": "^0.2.31",
        "@typescript-eslint/eslint-plugin": "5.14.0",
        "@typescript-eslint/parser": "5.14.0",
        "chai": "^4.3.6",
        "chai-http": "^4.3.0",
        "cross-env": "^7.0.3",
        "eslint": "8.10.0",
        "faker": "^6.6.6",
        "husky": "^7.0.4",
        "mocha": "^9.2.1",
        "nodemon": "2.0.15",
        "nyc": "^15.1.0",
        "prettier": "2.5.1",
        "rimraf": "3.0.2",
        "sinon": "^13.0.1",
        "ts-node": "10.7.0",
        "typescript": "4.6.2"
    },
    "dependencies": {
        "bcryptjs": "^2.4.3",
        "cloudinary": "^1.28.1",
        "cookie-parser": "^1.4.6",
        "dotenv": "^16.0.0",
        "express": "^4.17.3",
        "express-fileupload": "^1.3.1",
        "ioredis": "^4.28.5",
        "json-refs": "^3.0.15",
        "jsonwebtoken": "^8.5.1",
        "mongoose": "^6.2.4",
        "morgan": "^1.10.0",
        "nodemailer": "^6.7.2",
        "nodemailer-mailgun-transport": "^2.1.3",
        "proxyquire": "^2.1.3",
        "swagger-ui-express": "^4.3.0",
        "validator": "^13.7.0",
        "winston": "^3.6.0",
        "winston-daily-rotate-file": "^4.6.1",
        "yamljs": "^0.3.0"
    }
}
